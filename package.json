{
  "name": "caravaggio",
  "version": "2.4.0",
  "description": "A blazing fast image processor service",
  "main": "index.js",
  "bin": "bin/caravaggio",
  "scripts": {
    "start": "NODE_ENV=production node .",
    "now-start": "bin/caravaggio --cache memory --cache-limit 1024 --inputcache memory --inputcache-limit 1024 --errors html --whitelist ramiel.gitlab.io --verbose",
    "dev": "NODE_ENV=development micro-dev -p 3001 src/ -s",
    "test": "npm run lint && npm run test-only -- --coverage --colors=false",
    "test-only": "NODE_ENV=test ALLOW_CONFIG_MUTATIONS=true jest",
    "test-watch": "npm run test-only -- --watch",
    "lint": "eslint ."
  },
  "now": {
    "public": true,
    "type": "npm"
  },
  "repository": "gitlab:ramiel/caravaggio",
  "keywords": [
    "image",
    "proxy",
    "manipulation",
    "processor",
    "service"
  ],
  "author": "Fabrizio Ruggeri",
  "license": "MIT",
  "bugs": {
    "url": "https://gitlab.com/ramiel/caravaggio/issues"
  },
  "homepage": "https://ramiel.gitlab.io/caravaggio/",
  "dependencies": {
    "config": "3.0.0",
    "fs-extra": "7.0.0",
    "md5": "^2.2.1",
    "micro": "^9.3.3",
    "micro-redirect": "^1.0.0",
    "microrouter": "^3.1.2",
    "node-fetch": "^2.1.2",
    "pino": "^5.5.0",
    "pino-pretty": "^2.2.0",
    "sharp": "^0.20.8",
    "yargs": "12.0.2"
  },
  "devDependencies": {
    "eslint": "^5.6.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-import-resolver-jest": "^2.1.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^21.22.0",
    "jest": "^23.6.0",
    "micro-dev": "3.0.0",
    "request-promise": "^4.2.2",
    "test-listen": "^1.1.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageReporters": [
      "text-summary",
      "html"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/config/",
      "<rootDir>/node_modules/"
    ],
    "moduleDirectories": [
      "node_modules",
      "src",
      "test"
    ]
  },
  "pkg": {
    "assets": [
      "config/**/*",
      "static/**/*",
      "node_modules/config/**/*.*"
    ]
  }
}
